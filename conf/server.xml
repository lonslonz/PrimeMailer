<?xml version="1.0" encoding="ISO-8859-1" ?>

<configuration>
    <server name="localhost" port="8200" contextPath="/mail" maxThreads="512"/>
    <services>
        <service url="/send" 
                 class="com.skplanet.mailer.service.SendMail" 
                 exec="request" 
                 method="get"/>
        <service url="/sendpost" 
                 class="com.skplanet.mailer.service.SendMailPost" 
                 exec="request" 
                 method="post"/>
        <service url="/show" 
                 class="com.skplanet.mailer.service.ShowMail" 
                 exec="request" 
                 method="get"/>
        <service url="/error" 
                 class="com.skplanet.cask.service.ErrorRedirect" 
                 exec="request"
                 method="get"/>
        <service url="/sendbatch" 
                 class="com.skplanet.mailer.service.SendMailBatch" 
                 exec="batch" 
                 method="post"
                 sleepMSec="60000"/>
    </services>

