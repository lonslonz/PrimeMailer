        <property key = "smtpServer" value = "smtp.server.com"/>
        <property key = "smtpPort" value = "443"/>
        <property key = "ssl" value = "true"/>
        <property key = "id" value = "user"/>
        <property key = "password" value = "password"/>
        <!-- password for encryption. needed when id, password assigned. any word -->
        <property key = "crPassword" value = "myPassForEncription"/>
        <!-- salt for encryption. needed when id, password assigned. any number -->
        <property key = "crSalt" value = "12345678"/>
    </properties>

</configuration>
